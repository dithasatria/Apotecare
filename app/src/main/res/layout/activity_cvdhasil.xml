<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".CVDHasilActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/border"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView
                android:text="Hasil : "
                android:layout_gravity="start"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="20dp"
                android:layout_width="80dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/linearWarnaCVD"
                android:layout_marginLeft="15dp"
                android:background="@color/colorPrimary"
                android:layout_width="100dp"
                android:layout_height="40dp">

            </RelativeLayout>

            <TextView
                android:id="@+id/hasilCVD"
                android:layout_marginLeft="20dp"
                android:text=" 40%"
                android:padding="5dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCVDDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTurunkanResiko"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="APAKAH INGIN MENURUNKAN RESIKO?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btnNextCVD"
            android:layout_marginTop="10dp"
            android:text="YA"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgCVD"
            android:src="@drawable/cvd"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

    </LinearLayout>

</ScrollView>